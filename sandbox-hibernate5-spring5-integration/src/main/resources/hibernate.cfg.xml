<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
		<property name="hibernate.connection.username">SANDBOX_HIBERNATE</property>
		<property name="hibernate.connection.password">SANDBOX_HIBERNATE</property>
		<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
		<property name="show_sql">true</property>

		<!-- <property name="hibernate.hbm2ddl.auto">create-drop</property> -->

		<mapping class="com.github.lazyf1sh.sandbox.hibernate.spring.entities.ChildEntity" />
		<mapping class="com.github.lazyf1sh.sandbox.hibernate.spring.entities.ParentEntity" />
		
	</session-factory>
	
	
</hibernate-configuration>